{
  "paths": {
    "templates": {
      "watch":   ["app/**/*.jade"],
      "compile": ["build/**/*.jade"]
    },
    "scripts": {
      "watch":   ["app/**/*.coffee"],
      "compile": ["build/**/*.coffee"]
    },
    "stylesheets": {
      "watch":   ["app/**/*.styl"],
      "compile": ["build/app.styl"]
    }
  },
  "bowerFiles": {
    "angular": {
      "angular.js": "vendor/scripts/"
    },
    "angular-route": {
      "angular-route.js": "vendor/scripts/"
    },
    "bootstrap-stylus": {
      "stylus/*": "vendor/stylesheets/bootstrap/"
    },
    "jquery": {
      "dist/jquery.js": "vendor/scripts/"
    }
  }
}
